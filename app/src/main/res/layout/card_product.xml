<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    app:cardElevation="3dp"
    android:layout_marginHorizontal="0dp"
    android:layout_marginVertical="3dp"
    android:id="@+id/card_dashboard_card"
    app:cardBackgroundColor="@color/tienditApp_white"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingVertical="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="21dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:background="@color/tienditApp_white"
                android:gravity="center">


                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingVertical="20dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:textAlignment="textEnd"
                    android:textSize="20sp"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/tienditApp_gray"
                    android:layout_height="wrap_content"
                    android:text="Name" />

                <TextView
                    android:id="@+id/product_SKU"
                    android:layout_width="match_parent"
                    android:textAlignment="textEnd"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    android:textColor="@color/tienditApp_gray"
                    android:autoSizeTextType="uniform"
                    android:layout_height="wrap_content"
                    android:text="Product SKU: " />

                <TextView
                    android:id="@+id/product_amount"
                    android:layout_width="match_parent"
                    android:textAlignment="textEnd"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    android:textColor="@color/tienditApp_gray"
                    android:autoSizeTextType="uniform"
                    android:layout_height="wrap_content"
                    android:text="Cantidad " />

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="match_parent"
                    android:textAlignment="textEnd"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    android:textColor="@color/tienditApp_gray"
                    android:autoSizeTextType="uniform"
                    android:layout_height="wrap_content"
                    android:text="Cantidad " />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:background="@color/tienditApp_fire" />

                <TableRow
                    android:id="@+id/product_addToCart"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Agregar al Carrito"
                        android:textColor="@color/tienditApp_burning"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_gravity="center"
                        android:padding="3dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="3dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_stock_cart_plus" />
                </TableRow>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>