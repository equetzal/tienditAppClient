<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    app:cardElevation="3dp"
    android:layout_marginHorizontal="0dp"
    android:layout_marginVertical="3dp"
    android:id="@+id/item_card"
    app:cardBackgroundColor="@color/tienditApp_white"
    app:cardUseCompatPadding="true">

    <TableRow
        android:layout_width="match_parent"
        android:paddingVertical="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="21dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingVertical="20dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/cart_item_name"
                    android:layout_width="match_parent"
                    android:textAlignment="textStart"
                    android:textSize="15sp"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/tienditApp_gray"
                    android:layout_height="wrap_content"
                    android:text="Name" />

                <TextView
                    android:id="@+id/cart_item_SKU"
                    android:layout_width="match_parent"
                    android:textAlignment="textStart"
                    android:textSize="11sp"
                    android:textStyle="italic"
                    android:textColor="@color/tienditApp_gray"
                    android:autoSizeTextType="uniform"
                    android:layout_height="wrap_content"
                    android:text="Product SKU: " />

            </LinearLayout>
        </LinearLayout>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@color/tienditApp_white"
            android:gravity="center">


            <ImageButton
                android:id="@+id/cart_item_quitFromCart"
                android:padding="10dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_stock_minus" />

            <TextView
                android:id="@+id/cart_item_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tienditApp_fire"
                android:textSize="40sp"
                android:layout_marginHorizontal="15dp"
                android:text="#" />

            <ImageButton
                android:id="@+id/cart_item_addToCart"
                android:padding="10dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_stock_plus" />
        </TableRow>


    </TableRow>

</androidx.cardview.widget.CardView>