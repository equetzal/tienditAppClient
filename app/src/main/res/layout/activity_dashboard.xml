<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tienditApp_white"
    android:orientation="vertical"
    android:id="@+id/dashboard_background"
    tools:context="mx.ipn.escom.tienditappclient.activities.dashboard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/dashboard_menu_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tienditApp_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:weightSum="30">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

                <ImageButton
                    android:id="@+id/dashboard_menu_logo"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_tienditapp_logo" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

                <TableRow
                    android:id="@+id/dashboard_menu_viewProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingVertical="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        app:srcCompat="@drawable/ic_stock_list" />

                    <TextView
                        android:id="@+id/pantalla_dashboard_menu_textoMisDatos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Ver Productos"
                        android:textColor="@color/tienditApp_gray" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_stock_row_right" />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/tienditApp_fire" />

                <TableRow
                    android:id="@+id/dashboard_menu_editProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingVertical="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        app:srcCompat="@drawable/ic_stock_edit" />

                    <TextView
                        android:id="@+id/pantalla_dashboard_menu_textoMiBeca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Editar Productos"
                        android:textColor="@color/tienditApp_gray" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_stock_row_right" />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/tienditApp_fire" />

                <TableRow
                    android:id="@+id/dashboard_menu_viewCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingVertical="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        app:srcCompat="@drawable/ic_stock_shopping_cart" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Ver carrito de Compras"
                        android:textColor="@color/tienditApp_gray" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_stock_row_right" />

                </TableRow>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="23" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <Button
                        android:id="@+id/dashboard_menu_signout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:text="Cerrar Sesión"
                        android:textAllCaps="false"
                        android:textColor="@color/tienditApp_red"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/dashboard_menu_setup"
                        android:visibility="gone"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:contentDescription="Ir a Configuración"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_stock_cog" />
                </TableRow>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pantalla_dashboard_degradado"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:background="@drawable/shadow_layout"
            >

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dashboard_content_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:background="@color/tienditApp_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableRow
                    android:id="@+id/dashboard_bar"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:layout_height="60dp" >

                    <ImageButton
                        android:id="@+id/dashboard_bar_menuButton"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:contentDescription="Menu"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_menu" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />
                </TableRow>

                <FrameLayout
                    android:id="@+id/dashboard_content_fragmentFrame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/tienditApp_white">

                    <fragment
                        android:id="@+id/dashboard_content_fragmentContent"
                        android:name="mx.ipn.escom.tienditappclient.activities.view_products"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
